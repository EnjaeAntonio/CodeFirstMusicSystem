@model CodeFirstMusicSystem.Models.Viewmodel.PodcastEpisodeViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Podcast</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Podcast.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Podcast.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Podcast.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Podcast.ReleaseDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Podcast.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>Episodes</h4>
    <hr />
    <div class="form-group">
      <label asp-for="SelectedEpisodeId">Episodes:</label>
      <select asp-for="SelectedEpisodeId" asp-items="@(new SelectList(Model.Episodes, "Id", "Title"))" class="form-control">
        <option value="">-- Choose an episode --</option>
      </select>
    </div>
</div>
