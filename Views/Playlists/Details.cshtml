@model CodeFirstMusicSystem.Models.Viewmodel.PlaylistDetailsViewModel

<h1>@Model.Playlist.Name</h1>
<p>Total runtime: @Model.TotalRuntime</p>
<p>Number of songs: @Model.SongCount</p>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration (seconds)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.DurationSeconds</td>
                <td>
                    <form asp-controller="Playlist" asp-action="RemoveSong" method="post">
                        <input type="hidden" name="playlistId" value="@Model.Playlist.Id" />
                        <input type="hidden" name="songId" value="@song.Id" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Songs")">All Songs</a>

