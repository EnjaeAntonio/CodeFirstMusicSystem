@model CodeFirstMusicSystem.Models.ListenerList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ListenerList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <h4>Podcasts in this Listener List</h4>
    <hr />
    @foreach (var listenerListPodcast in Model.ListenerListPodcasts)
    {
        <ul>
            <li><a href="@Url.Action("Details", "Podcasts", new { id = listenerListPodcast.Podcast.Id })">@listenerListPodcast.Podcast.Title</a></li>
        </ul>
    }
</div>
